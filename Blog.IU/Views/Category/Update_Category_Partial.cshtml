

<div class="container">
    <main role="main" class="pb-3">
        <div class="container">
            <!-- Trigger the modal with a button -->
            <button type="button" class="btn btn-info btn-lg" data-toggle="modal" data-target="#myModal">Catgeory Ekle</button>

            <!-- Modal -->
            <div class="modal fade" id="myModal" role="dialog">
                <div class="modal-dialog">

                    <!-- Modal content-->
                    <div class="modal-content">
                     
                        <div class="modal-body">
                            <form method="post" asp-action="CategoryUpdate" asp-controller="Category"
                                  data-ajax="true"
                                  data-ajax-method="POST"
                                  data-ajax-success='SuccessLogin'
                                  data-ajax-failure='FailedLogin'
                                  data-ajax-update='#updateStatus'
                                  data-ajax-url="/Category/CategoryCreate">

                                <div class="row">
                                    <label>Kategori Adı</label>
                                    <input type="text" id="Name" name="Name" placeholder="Kategori Adı" />
                                </div>

                                <div class="row">
                                    <label>Kategori Numarası</label>
                                    <input type="number" id="CategoryNo" name="CategoryNo" placeholder="Kategori Numarası" />
                                </div>

                                <button name="createCategory" type="submit"
                                        class="waves-effect waves-light btn-large btn-c btn-rounded btn-full"
                                        id="createCategory">
                                    Kaydet
                                </button>
                            </form>


                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                        </div>
                    </div>

                </div>
            </div>

        </div>


    </main>

</div>
<script>
    $(document).on("click", ".open-AddBookDialog", function () {
        var myBookId = $(this).data('id');
        $(".modal-body #bookId").val(myBookId);
    });

</script>